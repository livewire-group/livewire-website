{
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"useTabs": true,
	"vueIndentScriptAndStyle": false,
	"htmlWhitespaceSensitivity": "ignore",
	"overrides": [
		{
			"files": ["package.json", "*.yml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": false
			}
		},
		{
			"files": ["*.html"],
			"options": {
				"parser": "go-template"
			}
		}
	]
}
