{
  "name": "livewire-website",
  "version": "0.0.1",
  "description": "Livewire public website. Running on Hugo & Netlify CMS.",
  "repository": "justrhysism/livewire",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "lint": "xo",
    "prestart": "npm run sprites",
    "start": "run-p start:**",
    "start:hugo": "hugo -d ./dist -vw",
    "start:webpack": "webpack serve --config webpack.dev.js --hot",
    "proxy-server": "npx netlify-cms-proxy-server",
    "preview": "run-p preview:**",
    "preview:hugo": "npm run start:hugo -- -D -F",
    "preview:webpack": "npm run start:webpack",
    "prebuild": "rimraf dist",
    "build": "npm run build:webpack && npm run build:hugo",
    "build:preview": "npm run build:webpack && npm run build:hugo:preview",
    "build:hugo": "hugo -d ../dist -s site -v",
    "build:hugo:preview": "npm run build:hugo -- -D -F",
    "prebuild:webpack": "npm run sprites",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "sprites": "node ./scripts/spriter.js"
  },
  "author": "Rhys Lloyd <justrhysism@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.13",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@babel/register": "^7.12.13",
    "assets-webpack-plugin": "^7.0.0",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "date-fns": "^1.30.1",
    "exports-loader": "^2.0.0",
    "fancy-log": "^1.3.3",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^7.0.2",
    "imports-loader": "^2.0.0",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^1.3.6",
    "netlify-cms-app": "^2.14.29",
    "hugo-bin": "^0.89.0",
    "netlify-cms-media-library-cloudinary": "^1.3.10",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "plugin-error": "^1.0.1",
    "postcss": "^8.2.6",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.0.0",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.2.1",
    "prettier-plugin-go-template": "^0.0.11",
    "prettier-plugin-toml": "0.3.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "svg-sprite": "^1.5.0",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3",
    "xo": "^0.37.1"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "tailwindcss": "^2.0.3"
  },
  "resolutions": {
    "postcss-focus-within": "^4.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
