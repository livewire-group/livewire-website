{
  "name": "livewire-website",
  "version": "0.0.1",
  "description": "Livewire public website. Running on Hugo & Netlify CMS.",
  "repository": "justrhysism/livewire",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "prestart": "npm run sprites",
    "start": "run-p start:**",
    "start:hugo": "hugo -d ./dist -vw",
    "start:webpack": "webpack serve --config webpack.development.js --hot",
    "proxy-server": "npx netlify-cms-proxy-server",
    "preview": "run-p preview:**",
    "preview:hugo": "npm run start:hugo -- -D -F",
    "preview:webpack": "npm run start:webpack",
    "prebuild": "rimraf dist",
    "build": "npm run build:webpack && npm run build:hugo",
    "build:preview": "npm run build:webpack && npm run build:hugo:preview",
    "build:hugo": "hugo -d ./dist -v",
    "build:hugo:preview": "npm run build:hugo -- -D -F",
    "prebuild:webpack": "npm run sprites",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.production.js",
    "sprites": "node ./scripts/spriter.js",
    "prepare": "husky install",
    "lint": "run-p --continue-on-error 'lint:*'",
    "lint:eslint": "eslint .",
    "lint:styles": "stylelint **/*.{css,pcss}",
    "format": "run-s --continue-on-error format:stylelint format:prettier",
    "format:stylelint": "stylelint --fix --cache **/*.{css,pcss}",
    "format:prettier": "prettier --write --cache --ignore-unknown --no-error-on-unmatched-pattern **/*.{js,jsx,ts,tsx,html,md,css,pcss,json,toml}"
  },
  "author": "Rhys Lloyd <justrhysism@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "assets-webpack-plugin": "^7.1.1",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "date-fns": "^2.28.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-typescript": "^0.52.0",
    "eslint-import-resolver-typescript": "^3.2.7",
    "eslint-plugin-html": "^7.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "exports-loader": "^4.0.0",
    "fancy-log": "^2.0.0",
    "fast-glob": "^3.2.11",
    "html-webpack-plugin": "^5.5.0",
    "hugo-bin": "^0.89.0",
    "husky": "^8.0.1",
    "imports-loader": "^4.0.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "mkdirp": "^1.0.4",
    "netlify-cms-app": "^2.15.72",
    "netlify-cms-media-library-cloudinary": "^1.3.10",
    "npm-run-all": "^4.1.5",
    "plugin-error": "^2.0.0",
    "postcss": "^8.4.14",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^7.0.1",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.7.2",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13",
    "prettier-plugin-toml": "^0.3.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-xo": "^0.21.0",
    "stylelint-order": "^5.0.0",
    "svg-sprite": "^1.5.4",
    "terser-webpack-plugin": "^5.3.3",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0",
    "xo": "^0.50.0"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "tailwindcss": "^3.1.6"
  },
  "resolutions": {
    "autoprefixer": "^10.4.5",
    "postcss-focus-within": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,pcss}": [
      "stylelint --cache --fix",
      "prettier --write"
    ],
    "*.html": [
      "eslint --cache --fix",
      "stylelint --cache --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  }
}
